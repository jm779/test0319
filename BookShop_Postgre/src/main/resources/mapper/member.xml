<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<select id="list" resultType="Member">
		SELECT * FROM member
	</select>
	
	<select id="item" resultType="Member">
		SELECT * FROM member
		FROM item
	</select>

	<insert id="add">
		INSERT INTO member
		VALUES (#{id}, #{password}, #{name}, #{tel})
	</insert>
	
	<update id="update">
		UPDATE member
		SET password=#{password}, name=#{name}, tel=#{tel}
		WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM member
		WHERE id=#{id}
	</delete>
	
</mapper>